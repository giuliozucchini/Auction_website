
<div class="col-sm-4">	
	<h2>Add new product</h2>
	<%= form_for [@user, @product] do |f| %>
	<%= render 'layouts/errors', model: @product %>


		<%= f.label :title %>
		<%= f.text_field :title, class: "form-control" %>
		<br />
		<%= f.label :description %>
		<%= f.text_field :description, class: "form-control" %>
		<br />
		<%= f.label :min_bid %>
		<%= f.number_field :min_bid, class: "form-control" %>
		<br />
		<%= f.label :deadline%>
		<%= f.date_field :deadline, class: "form-control" %>
		<br />
		<%= f.submit nil, class: "btn btn-primary" %>
	  <% end %>
</div>